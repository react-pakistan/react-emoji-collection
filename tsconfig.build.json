{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "jsx": "react",
    "rootDir": "./src",
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./node_modules/@types"
  ],
  "exclude": [
    "./.storybook",
    "./jest",
    "./src/**/*.story.tsx",
    "./src/**/__stories__",
    "./src/**/__tests__",
    "./src/**/props.ts",
    "./src/colors",
    "./src/hoc",
    "./src/typography"
  ]
}
